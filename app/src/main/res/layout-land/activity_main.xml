<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- header -->
    <include
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- ScrollView para permitir rolagem -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Seção Sense -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <!-- Imagem de fundo da bicicleta -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Imagem de uma bicicleta"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bike1" />

                <!-- Camada escura para melhorar contraste dos textos -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dark_gradient" />

                <!-- Textos e botão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|start"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!--  subtítulo BIKE PASSION -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:letterSpacing="0.1"
                        android:text="BIKE PASSION"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- título "SENSE" -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="SENSE"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <!-- Paragráfo -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:text="Feito por quem pedala, para quem pedala"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <!-- botão SABER MAIS -->

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SABER MAIS" />

                </LinearLayout>
            </FrameLayout>

            <!-- Seção Swift -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="500dp">

                <!-- Imagem de fundo com as peças da bicicleta -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Imagem de peças de bicicleta Swift"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pecas_bike" />

                <!-- Camada escura para melhorar contraste dos textos -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dark_gradient" />

                <!-- Textos e botão -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|start"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!--  subtítulo "AN EXCEPTIONAL RIDE" -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:letterSpacing="0.1"
                        android:text="AN EXCEPTIONAL RIDE"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- título "SWIFT" -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="SWIFT"
                        android:textColor="@color/white"
                        android:textSize="40sp"
                        android:textStyle="bold" />

                    <!-- Paragráfo -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:text="Crafted in Portugal, Ridden Worldwide"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <!-- botão SABER MAIS -->
                    <TextView
                        android:id="@+id/btn_saber_mais_swift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/button_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:paddingStart="24dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="24dp"
                        android:paddingBottom="12dp"
                        android:text="@string/saber_mais"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>